@model IEnumerable<MinecraftWrapper.Data.Entities.NewsItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateExpires)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateExpires)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NewsItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NewsItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NewsItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
